{
    "schemaVersion": "1.4",
    "acapPackageConf": {
        "setup": {
            "friendlyName": "ACME TLS Auto-Updater",
            "appName": "acme-updater",
            "vendor": "My Company",
            "embeddedSdkVersion": "3.0",
            "user": {
                "user": "root",
                "group": "root"
            },
            "runOptions": [ "restart-on-error" ]
        },
        "configuration": {
            "settingDefinitions": [
                {
                    "name": "DOMAIN_NAME",
                    "displayName": "Domain Name",
                    "type": "string",
                    "default": "camera.example.com"
                },
                {
                    "name": "RENEW_INTERVAL_HOURS",
                    "displayName": "Check Interval (Hours)",
                    "type": "number",
                    "default": 24
                },
                {
                    "name": "RETRY_WAIT_SECONDS",
                    "displayName": "Retry Wait on Failure (Seconds)",
                    "type": "number",
                    "default": 300
                },
                {
                    "name": "DNS_API_TOKEN",
                    "displayName": "DNS Provider API Token",
                    "type": "password",
                    "default": ""
                },
                 {
                    "name": "CAMERA_PASSWORD",
                    "displayName": "Camera Root Password (Localhost)",
                    "type": "password",
                    "default": "pass"
                }
            ]
        }
    }
}
